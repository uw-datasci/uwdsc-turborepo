{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_APP_URL",
        "SUPABASE_URL",
        "SUPABASE_PUBLISHABLE_DEFAULT_KEY",
        "DATABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "NFC_HMAC_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "inputs": ["src/prisma/schema.prisma"],
      "outputs": ["src/generated/**"]
    },
    "db:migrate": {
      "inputs": ["src/prisma/schema.prisma", "src/prisma/migrations/**"]
    }
  }
}
